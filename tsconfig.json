{
  "compilerOptions": {
    "target": "es2020",
    "baseUrl": "src",
    "noImplicitAny": false,
    "module": "ES2020",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "alwaysStrict": false,
    "strictNullChecks": false,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "lib": ["DOM", "ESNext", "WebWorker"],
    "outDir": "dist",
    "paths": {
      "error-boundaries": ["./component/common/ErrorBoundaries.tsx"],
      "test-utils": ["test-utils"],
      "@temposoftware/tempo-i18n": ["./translate.ts"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
